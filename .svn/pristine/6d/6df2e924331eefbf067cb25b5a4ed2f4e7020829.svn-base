.ffh-load-spinner {
    position: absolute;
    background-color: rgba(0, 0, 0, 0.2);
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 5;
}

.error {
    color: #d33c2c;
    background-color: #133b52;
    font-size: 21px;
}

.ffh-load-spinner-inner-container {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}