<div class="ffh-load-spinner" [ngClass]="{'error': process.isError}" *ngIf="process.isProcessing || process.isError">
    <div class="ffh-load-spinner-inner-container">
        <span *ngIf="process.isError">{{ process.errorTitle }}</span>
        <i *ngIf="!process.isError" class='fa fa-4x fa-spinner fa-spin'></i>
    </div>
</div>
